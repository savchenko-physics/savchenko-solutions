<!-- views/user_profile.ejs -->
<!DOCTYPE html>
<html lang="<%= lang %>">

<head>
    <meta charset="UTF-8">
    <title>
        <%= fullName %>'s Profile
    </title>
</head>

<body>
    <h1>
        <%= fullName %>'s Profile
    </h1>
    <h2>Contributions</h2>
    <ul>
        <% contributions.forEach(contribution=> { %>
            <li>
                <strong>
                    <%= contribution.problem_name %>
                </strong>
                (<%= contribution.language %>) -
                    <%= new Date(contribution.edited_at).toLocaleDateString() %>
            </li>
            <% }) %>
    </ul>
</body>

</html>