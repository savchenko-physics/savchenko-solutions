<!DOCTYPE html>
<html>

<head>
    <title>Text Comparison</title>
    <script src="/diff_match_patch.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #e0e7ff;
        }

        h1 {
            color: #1e3a8a;
            margin-bottom: 20px;
        }

        .container {
            width: 90%;
            max-width: 800px;
            background-color: #ffffff;
            border: 1px solid #e5e7eb;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            overflow-x: auto;
        }

        .back-link {
            display: flex;
            align-items: center;
            color: #3b82f6;
            text-decoration: none;
            margin-bottom: 20px;
            transition: color 0.3s;
        }

        .back-link:hover {
            color: #2563eb;
        }

        .meta-info p {
            margin: 5px 0;
            color: #4b5563;
        }

        .stat {
            font-weight: 500;
            margin-right: 10px;
        }

        .added-stat {
            color: #10b981;
        }

        .removed-stat {
            color: #ef4444;
        }

        code {
            display: block;
            padding-left: 30px;
            position: relative;
            white-space: pre-wrap;
            background-color: #f3f4f6;
            border-radius: 8px;
            padding: 10px;
        }

        #outputdiv {
            width: 100%;
            max-width: 800px;
            background-color: #f9fafb;
            border: 1px solid #d1d5db;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            padding: 20px;
            overflow-x: auto;
        }

        #outputdiv pre {
            margin: 0;
            font-family: 'Roboto Mono', monospace;
            font-size: 14px;
            line-height: 1.5;
            color: #374151;
        }

        #outputdiv code {
            background-color: transparent;
            padding: 0;
        }
    </style>
</head>

<body>
    <h1>Text Comparison</h1>

    <div class="container">
        <a href="/<%= lang %>/profile" class="back-link">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <%= __('contributions.backToProfile') %>
        </a>
        
        <div class="header">
            <h1><%= __('contributions.changesFor') %> <%= contribution.problem_name %></h1>
            <div class="meta-info">
                <p>
                    <%= __('contributions.editedBy') %>: 
                    <% if (contribution.isAnonymous) { %>
                        <strong><%= __('contributions.anonymousUser') %></strong> 
                        (<strong>IP: <%= contribution.editor_identifier %></strong>)
                    <% } else { %>
                        <strong><%= contribution.editor_name %></strong> 
                        (<strong>@<%= contribution.editor_identifier %></strong>)
                    <% } %>
                </p>
                <p><%= __('contributions.editedAt') %>: <strong><%= formatDate(contribution.edited_at) %></strong></p>
                <p class="change-summary">
                    <span class="stat added-stat">+<%= changes.filter(c => c.type === 'added' || c.type === 'modified').length %></span>
                    <span class="stat removed-stat">-<%= changes.filter(c => c.type === 'removed' || c.type === 'modified').length %></span>
                    <span><%= __('contributions.linesChanged') %></span>
                </p>
            </div>
        </div>
    </div>

    <script>
        var dmp = new diff_match_patch();

        function launch() {
            var text1 = `<%- originalContent.replace(/\\/g, '\\\\') %>`;
            var text2 = `<%- newContent.replace(/\\/g, '\\\\') %>`;
            var d = dmp.diff_main(text1, text2);
            var ds = dmp.diff_prettyHtml(d);
            document.getElementById('outputdiv').innerHTML = `<pre><code>${ds}</code></pre>`;
        }

        window.onload = function () {
            launch();
        };
    </script>

    <div id="outputdiv"></div>

</body>

</html>