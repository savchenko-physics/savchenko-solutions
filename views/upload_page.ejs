                type="radio"
                name="solutionLanguage"
                id="langEnglish"
                value="en"
                <%= lang === 'en' ? 'checked' : '' %>
              />
              <label class="form-check-label" for="langEnglish">
                English
              </label>
            </div>
            <div class="form-check">
