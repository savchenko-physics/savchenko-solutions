          <li class="nav-item me-3">
            <% if (lang === 'en') { %>
              <span class="text-white">
                <strong><a href="/" class="text-white text-decoration-none">EN</a></strong>
              </span>
            <% } else { %>
              <span class="text-white">
                <strong><a href="/en" class="text-white text-decoration-none">RU</a></strong>
              </span>
            <% } %>
          </li>
          <li class="nav-item">
