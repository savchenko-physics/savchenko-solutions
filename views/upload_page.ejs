            <label class="form-label step-label">
              <strong>1b.</strong> <%= __('upload.steps.userInfo') %>
            </label>
            <div class="mb-3">
              <input
                type="text"
                class="form-control"
                id="fullName"
                placeholder="<%= __('upload.anonymous.fullName') %>"
              />
              <div class="form-text">
                <%= __('upload.anonymous.info') %>
              </div>
            </div>
          </div>

          <!-- Step 2: Choose the Method -->
