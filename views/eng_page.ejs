  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script>
    const searchInput = document.getElementById("searchInput");
    const searchResults = document.getElementById("searchResults");
    const searchResultsList = document.querySelector("#searchResults ul");
    const clearButton = document.getElementById("clearSearch");
    let lastSearchResults = ""; // Store the last search results

    // Add click event listener to document
    document.addEventListener('click', function(event) {
        // Check if click is outside search input and search results
        if (!searchInput.contains(event.target) && !searchResults.contains(event.target)) {
            searchResults.style.display = "none";
        }
    });

    // Show previous results when focusing on search input
    searchInput.addEventListener("focus", () => {
        if (searchInput.value.trim().length > 0 && lastSearchResults) {
            searchResultsList.innerHTML = lastSearchResults;
            searchResults.style.display = "block";
        }
    });

    searchInput.addEventListener("input", async () => {
        const query = searchInput.value.trim();
        const currentLang = '<%= lang %>'; // Get current language from EJS template

        if (query.length === 0) {
            searchResults.style.display = "none";
            searchResultsList.innerHTML = "";
            lastSearchResults = ""; // Clear stored results
            return;
        }

        try {
            const response = await fetch(`/search?q=${encodeURIComponent(query)}&lang=${currentLang}`);
            const data = await response.json();

            if (data.results.length > 0) {
                const limitedResults = data.results.slice(0, 10);
                const resultsHTML = limitedResults.map((result, index) => `
                    <li id="cdx-menu-item-${index}" role="option" class="cdx-menu-item cdx-menu-item--enabled">
                        <a href="${result.relativePath}" class="cdx-menu-item__content text-dark text-decoration-none d-flex align-items-center">
                            <svg class="me-2" viewBox="0 0 24 24" width="16" height="16">
                                <path fill="#9e9e9e" d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                            </svg>
                            <span class="cdx-menu-item__text d-flex justify-content-between align-items-center w-100">
                                <span class="cdx-search-result-title">
                                    <strong>${result.name}</strong>
                                    <span class="cdx-menu-item__text__description"><bdi>${result.snippet}</bdi></span>
                                </span>
                                ${result.confidence === 'high' ? '<small class="ms-2" style="color: #9e9e9e; font-size: 0.7em;">â˜…</small>' : ''}
                            </span>
                        </a>
                    </li>
                `).join("");
                
                searchResultsList.innerHTML = resultsHTML;
                lastSearchResults = resultsHTML; // Store the results
                searchResults.style.display = "block";
            } else {
                const noResultsHTML = `
                    <li class="cdx-menu-item cdx-menu-item--enabled p-4">
                        <div class="text-center">
                            <!-- No Results Icon -->
                            <svg class="mb-3" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#6c757d" stroke-width="1.5">
                                <circle cx="11" cy="11" r="8"/>
                                <path d="M21 21l-4.35-4.35"/>
                                <path d="M8 11h6"/>
                            </svg>
                            
                            <!-- No Results Message -->
                            <h6 class="mb-3 text-secondary">
                                <%= lang === 'ru' ? 'ÐÐ¸Ñ‡ÐµÐ³Ð¾ Ð½Ðµ Ð½Ð°Ð¹Ð´ÐµÐ½Ð¾.' : 'No results found.' %>
                            </h6>
                            
                            <!-- Action Buttons -->
                            <div class="d-flex gap-2 justify-content-center">
                                <a href="/<%= lang %>/upload" class="edit-button btn btn-outline-light rounded-pill px-4" style="background-color: #007bff; color: white;" data-chapter="1">
                                    <svg class="me-2" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4"/>
                                        <polyline points="17 8 12 3 7 8"/>
                                        <line x1="12" y1="3" x2="12" y2="15"/>
                                    </svg>
                                    <%= __('menu.upload') %>
                                </a>
                                <a href="/global-search?search=${encodeURIComponent(query)}" class="btn btn-outline-light rounded-pill px-4" style="border-color: #6c757d; color: #6c757d;">
                                    <svg class="me-2" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="11" cy="11" r="8"/>
                                        <line x1="21" y1="21" x2="16.65" y2="16.65"/>
                                        <line x1="11" y1="8" x2="11" y2="14"/>
                                        <line x1="8" y1="11" x2="14" y2="11"/>
                                    </svg>
                                    <%= __('menu.advancedSearch') %>
                                </a>
                            </div>
                        </div>
                    </li>
                `;
                searchResultsList.innerHTML = noResultsHTML;
                lastSearchResults = noResultsHTML; // Store the no results message
                searchResults.style.display = "block";
            }
        } catch (error) {
            console.error('Error fetching search results:', error);
        }
    });

    // Show/hide clear button based on input
    searchInput.addEventListener("input", function() {
        clearButton.style.display = this.value ? "block" : "none";
    });

    // Clear search input and results
    clearButton.addEventListener("click", function() {
        searchInput.value = "";
        searchResults.style.display = "none";
        searchResultsList.innerHTML = "";
        this.style.display = "none";
        searchInput.focus();
    });
  </script>

