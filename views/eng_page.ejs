  <script>
    const searchInput = document.getElementById("searchInput");
    const searchResults = document.getElementById("searchResults");
    const searchResultsList = document.querySelector("#searchResults ul");
    const clearButton = document.getElementById("clearSearch");
    let lastSearchResults = ""; // Store the last search results

    // Add click event listener to document
    document.addEventListener('click', function(event) {
        // Check if click is outside search input and search results
        if (!searchInput.contains(event.target) && !searchResults.contains(event.target)) {
            searchResults.style.display = "none";
        }
    });

    // Show previous results when focusing on search input
    searchInput.addEventListener("focus", () => {
        if (searchInput.value.trim().length > 0 && lastSearchResults) {
            searchResultsList.innerHTML = lastSearchResults;
            searchResults.style.display = "block";
        }
    });

    searchInput.addEventListener("input", async () => {
        const query = searchInput.value.trim();
        const currentLang = '<%= lang %>'; // Get current language from EJS template

        if (query.length === 0) {
            searchResults.style.display = "none";
            searchResultsList.innerHTML = "";
            lastSearchResults = ""; // Clear stored results
            return;
        }

        try {
            const response = await fetch(`/search?q=${encodeURIComponent(query)}&lang=${currentLang}`);
            const data = await response.json();

            if (data.results.length > 0) {
                const limitedResults = data.results.slice(0, 10);
                const resultsHTML = limitedResults.map((result, index) => `
                    <li id="cdx-menu-item-${index}" role="option" class="cdx-menu-item cdx-menu-item--enabled">
                        <a href="${result.relativePath}" class="cdx-menu-item__content text-dark text-decoration-none d-flex align-items-center">
                            <svg class="me-2" viewBox="0 0 24 24" width="16" height="16">
