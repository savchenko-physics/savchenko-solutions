    <script>
        // Summit banner management
        function closeSummitBanner() {
            document.getElementById('summitBanner').style.display = 'none';
            localStorage.setItem('summitBannerClosed', 'true');
        }

        // Check if banner was previously closed
        if (localStorage.getItem('summitBannerClosed') === 'true') {
            document.getElementById('summitBanner').style.display = 'none';
        }

        // Load contributors
        async function loadContributors() {
            try {
                const response = await fetch(`/api/contributors/<%= problemRef %>?lang=<%= lang %>`);
                const contributors = await response.json();
                
                const contributorsList = document.getElementById('contributorsList');
                const contributorCount = document.getElementById('contributorCount');
                
                contributorCount.textContent = contributors.length;
                
                if (contributors.length === 0) {
                    contributorsList.innerHTML = '<div class="text-center text-muted">No contributors yet</div>';
                    return;
                }

                contributorsList.innerHTML = contributors.slice(0, 5).map(contributor => `
                    <div class="contributor">
                        <img src="${contributor.profile_picture || '/img/profile_images/Default_placeholder.svg'}" 
                             alt="${contributor.name}" class="contributor-avatar">
                        <div class="contributor-info">
                            <div class="contributor-name">${contributor.name}</div>
                            <div class="contributor-role">${contributor.role || 'Contributor'}</div>
                        </div>
                        <div class="contributor-stats">
                            <span class="contribution-count">${contributor.contributions}</span>
                        </div>
                    </div>
                `).join('');
                
                if (contributors.length > 5) {
                    contributorsList.innerHTML += `
                        <div class="text-center mt-3">
                            <a href="/<%= lang %>/contributions/<%= problemRef %>" class="info-link">
                                +${contributors.length - 5} more contributors
                            </a>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading contributors:', error);
                document.getElementById('contributorsList').innerHTML = '<div class="text-center text-muted">Error loading contributors</div>';
                document.getElementById('contributorCount').textContent = '0';
            }
        }

        // Graph functionality
        let chartInstance;

        document.getElementById('viewsItem').addEventListener('click', async function(event) {
            const graphPopup = document.getElementById('graphPopup');
            const rect = event.target.getBoundingClientRect();
            
            try {
                const response = await fetch(`/api/page-views/<%= problemRef %>`);
                const data = await response.json();

                const labels = data.map(entry => entry.date);
                const views = data.map(entry => entry.views);

                // Position popup
                graphPopup.style.position = 'fixed';
                graphPopup.style.top = `${Math.min(rect.bottom + 10, window.innerHeight - 300)}px`;
                graphPopup.style.left = `${Math.min(rect.left, window.innerWidth - 500)}px`;
                graphPopup.style.display = 'block';

                // Destroy existing chart
                if (chartInstance) {
                    chartInstance.destroy();
                }

                // Create new chart
                const ctx = document.getElementById('viewsGraph').getContext('2d');
                chartInstance = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Views',
                            data: views,
                            borderColor: 'rgb(9, 105, 218)',
                            backgroundColor: 'rgba(9, 105, 218, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                type: 'time',
                                time: {
                                    unit: 'day',
                                    displayFormats: {
                                        day: 'MMM dd'
                                    }
                                }
                            },
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    precision: 0
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            } catch (error) {
                console.error('Error loading graph data:', error);
            }
        });

        document.getElementById('closeGraphButton').addEventListener('click', function() {
            document.getElementById('graphPopup').style.display = 'none';
        });

        // Close popup when clicking outside
        document.addEventListener('click', function(event) {
            const popup = document.getElementById('graphPopup');
            const viewsItem = document.getElementById('viewsItem');
            
            if (!popup.contains(event.target) && !viewsItem.contains(event.target)) {
                popup.style.display = 'none';
            }
        });

        // Load contributors on page load
        document.addEventListener('DOMContentLoaded', loadContributors);
    </script>
</body>
