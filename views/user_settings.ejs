            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Avatar upload functionality
        const avatarUpload = document.getElementById('avatarUpload');
        const profilePictureInput = document.getElementById('profilePicture');

        avatarUpload.addEventListener('click', () => {
            profilePictureInput.click();
        });

        avatarUpload.addEventListener('dragover', (e) => {
            e.preventDefault();
            avatarUpload.classList.add('dragover');
        });

        avatarUpload.addEventListener('dragleave', () => {
            avatarUpload.classList.remove('dragover');
        });

        avatarUpload.addEventListener('drop', (e) => {
            e.preventDefault();
            avatarUpload.classList.remove('dragover');
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                profilePictureInput.files = files;
                handleFileSelect(files[0]);
            }
        });

        profilePictureInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFileSelect(e.target.files[0]);
            }
        });

        function handleFileSelect(file) {
            if (file && file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    avatarUpload.innerHTML = `
                        <img src="${e.target.result}" alt="Preview" style="max-width: 200px; max-height: 200px; border-radius: 8px;">
                        <p class="mt-2"><strong>File selected:</strong> ${file.name}</p>
                    `;
                };
                reader.readAsDataURL(file);
            }
        }

        // Interests management
        const interestTags = document.getElementById('interestTags');
        const addInterestBtn = document.getElementById('addInterestBtn');
        const interestsInput = document.getElementById('interestsInput');
        const popularTopicBtns = document.querySelectorAll('.popular-topic-btn');

        function updateInterestsInput() {
            const interests = Array.from(interestTags.querySelectorAll('.interest-tag'))
                .map(tag => tag.dataset.interest);
            interestsInput.value = JSON.stringify(interests);
        }

        addInterestBtn.addEventListener('click', () => {
            const interest = prompt('Enter a physics topic:');
            if (interest && interest.trim()) {
                addInterest(interest.trim());
            }
        });

        function addInterest(interest) {
            // Check if interest already exists
            const existing = interestTags.querySelector(`[data-interest="${interest}"]`);
            if (existing) return;

            const tag = document.createElement('span');
            tag.className = 'interest-tag';
            tag.dataset.interest = interest;
            tag.innerHTML = `${interest} <i class="fas fa-times ms-1"></i>`;
            
            tag.addEventListener('click', () => {
                tag.remove();
                updateInterestsInput();
            });

            interestTags.insertBefore(tag, addInterestBtn);
            updateInterestsInput();
        }

        popularTopicBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                addInterest(btn.dataset.topic);
            });
        });

        // Initialize interests input
        updateInterestsInput();

        // Tab animation
        document.querySelectorAll('[data-bs-toggle="tab"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', (e) => {
                const target = document.querySelector(e.target.getAttribute('data-bs-target'));
                target.style.animation = 'none';
                target.offsetHeight; // Trigger reflow
                target.style.animation = 'fadeIn 0.3s ease-in-out';
            });
        });
    </script>
</body>
